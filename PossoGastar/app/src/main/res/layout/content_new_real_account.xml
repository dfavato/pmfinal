<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_real_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gabrielcardoso.possogastar.NewRealAccount"
    tools:showIn="@layout/activity_new_real_account">

    <TextView
        android:text="Nova Conta Real"
        android:textSize="10pt"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:id="@+id/textView3"
        android:layout_column="0"/>

    <android.support.design.widget.TextInputLayout android:id="@+id/text_input_nome_conta_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp">
        <EditText
            style="@style/edit_text"
            android:id="@+id/nomeContaReal"
            android:textSize="9pt"
            android:layout_marginLeft="16dp"
            android:hint="Nome"
            android:imeOptions="actionDone" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:text="Tipo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:textSize="9pt"/>

        <Spinner
            android:id="@+id/tipos_conta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <Button
        android:text="Salvar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/salvar_conta_real"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="Cancelar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancelar_cadastro_conta_real"/>

</LinearLayout>
